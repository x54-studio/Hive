# Flask Configuration - REQUIRED
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# Flask Configuration - Optional
FLASK_ENV=development

# MongoDB Configuration - Optional (only needed for local dev without Docker)
# When using Docker Compose, MONGO_URI is automatically set by docker-compose.yml
MONGO_URI=mongodb://admin:hivepass123@localhost:27027/
MONGO_DB_NAME=hive_db

# JWT Token Expiry - Optional (defaults provided)
# Access token expires in 15 minutes (900 seconds)
JWT_ACCESS_TOKEN_EXPIRES=10
# Refresh token expires in 7 days (604800 seconds)
JWT_REFRESH_TOKEN_EXPIRES=30

# Testing - Optional
TESTING=false
TEST_MONGO_URI=mongodb://localhost:27017/
TEST_MONGO_DB_NAME=hive_db_test
