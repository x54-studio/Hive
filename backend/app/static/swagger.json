{
  "swagger": "2.0",
  "info": {
    "title": "Hive API",
    "description": "API documentation for Hive news platform",
    "version": "1.0.0"
  },
  "host": "localhost:5000",
  "schemes": ["http"],
  "paths": {
    "/api/articles": {
      "get": {
        "summary": "Fetch all news articles",
        "description": "Returns a list of published news articles",
        "responses": {
          "200": {
            "description": "A list of articles",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "integer" },
                  "title": { "type": "string" },
                  "content": { "type": "string" }
                }
              }
            }
          }
        }
      }
    },
    "/api/login": {
      "post": {
        "summary": "User login",
        "description": "Authenticates a user and returns a JWT token",
        "parameters": [
          {
            "name": "credentials",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "username": { "type": "string" },
                "password": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "JWT access token"
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      }
    }
  }
}
